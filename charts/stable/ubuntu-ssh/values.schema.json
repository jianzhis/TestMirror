{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "title": "副本数量",
      "default": 1,
      "minimum": 1
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string",
          "title": "镜像仓库",
          "default": "nidexiong/ubuntu-ssh"
        },
        "tag": {
          "type": "string",
          "title": "镜像标签",
          "default": "latest"
        },
        "pullPolicy": {
          "type": "string",
          "title": "镜像拉取策略",
          "default": "IfNotPresent"
        },
        "ubuntuVersion": {
          "type": "string",
          "title": "Ubuntu 版本",
          "description": "选择 Ubuntu 的版本，例如 '20.04', '22.04' 或 'latest'",
          "default": "latest",
          "enum": ["latest", "22.04", "20.04"]
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "title": "服务类型",
          "default": "ClusterIP"
        },
        "port": {
          "type": "integer",
          "title": "服务端口",
          "default": 22
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "default": "500m"
            },
            "memory": {
              "type": "string",
              "default": "512Mi"
            }
          }
        },
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "default": "250m"
            },
            "memory": {
              "type": "string",
              "default": "256Mi"
            }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "accessMode": {
          "type": "string",
          "default": "ReadWriteOnce"
        },
        "size": {
          "type": "string",
          "default": "1Gi"
        },
        "storageClass": {
          "type": "string",
          "default": "local"
        }
      }
    }
  }
}
