{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "title": "副本数量",
      "description": "要部署的副本数量",
      "minimum": 1,
      "default": 1
    },
    "image": {
      "type": "object",
      "properties": {
        "imageRegistry": { "type": "string", "default": "registry-2.yunna.net" },
        "repository": { "type": "string", "default": "library/ubuntu-ssh" },
        "tag": { "type": "string", "default": "latest" },
        "pullPolicy": { "type": "string", "default": "IfNotPresent" }
      }
    },
    "env": {
      "type": "object",
      "properties": {
        "env1": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "default": "UBUNTU_VERSION" },
            "value": { "type": "string", "default": "20.04" }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "accessMode": { "type": "string", "default": "ReadWriteOnce" },
        "size": { "type": "string", "default": "1Gi" },
        "storageClass": { "type": "string", "default": "local" }
      }
    }
  }
}
