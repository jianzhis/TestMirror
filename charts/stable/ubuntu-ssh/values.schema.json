{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "replicaCount": {
      "type": "integer",
      "title": "副本数量",
      "minimum": 1,
      "default": 1
    },
    "image": {
      "type": "object",
      "properties": {
        "imageRegistry": {
          "type": "string",
          "title": "镜像仓库",
          "default": "registry-2.yunna.net"
        },
        "repository": {
          "type": "string",
          "title": "镜像名称",
          "default": "ubuntu/ssh-tools"
        },
        "tag": {
          "type": "string",
          "title": "镜像标签",
          "default": "latest"
        },
        "pullPolicy": {
          "type": "string",
          "title": "镜像拉取策略",
          "default": "IfNotPresent"
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": {
          "type": "object",
          "properties": {
            "cpu": { "type": "string", "default": "1000m" },
            "memory": { "type": "string", "default": "1024Mi" }
          }
        },
        "requests": {
          "type": "object",
          "properties": {
            "cpu": { "type": "string", "default": "500m" },
            "memory": { "type": "string", "default": "512Mi" }
          }
        }
      }
    },
    "persistence": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "accessMode": { "type": "string", "default": "ReadWriteOnce" },
        "size": { "type": "string", "default": "1Gi" },
        "storageClass": { "type": "string", "default": "local" }
      }
    },
    "env": {
      "type": "object",
      "properties": {
        "env1": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "default": "TZ" },
            "value": { "type": "string", "default": "Asia/Shanghai" }
          }
        },
        "env2": {
          "type": "object",
          "properties": {
            "name": { "type": "string", "default": "LANG" },
            "value": { "type": "string", "default": "en_US.UTF-8" }
          }
        }
      }
    }
  }
}
